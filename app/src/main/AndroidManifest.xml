<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aesc.restaurantews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestauranteWS">
        <activity
            android:name="com.aesc.restaurantews.ui.activities.splahs.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RestauranteWS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aesc.restaurantews.ui.activities.registro.RegistroActivity"
            android:exported="true"
            android:theme="@style/Theme.RestauranteWS.NoActionBar" />
        <activity
            android:name="com.aesc.restaurantews.ui.activities.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.RestauranteWS.NoActionBar" />
        <activity
            android:name="com.aesc.restaurantews.ui.activities.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RestauranteWS.NoActionBar"/>
    </application>

</manifest>